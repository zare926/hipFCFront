{
  "typescript.tsdk": "node_modules/typescript/lib",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.hlsearch": false,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.easymotionKeys": "sdfghjkl",
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "editor.minimap.enabled": false, // ミニマップはいらない
  "editor.formatOnSave": true,
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true, // JavaScript の文字列はダブルクォートではなくシングルクォー
  "prettier.printWidth": 120,
  "colorize.colorized_colors": ["BROWSERS_COLORS", "HEXA", "RGB", "HSL"],
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "typescript",
    "javascript"
  ]
}
